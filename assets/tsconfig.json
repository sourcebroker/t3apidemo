{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,

        "allowSyntheticDefaultImports": true,

        "jsx": "preserve",
        "importHelpers": true,

        "strict": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,

        "baseUrl": "./src/js",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
    },
    "include": [
        "src/js/**/*.ts",
        "src/js/**/*.tsx",
        "src/js/**/*.vue",
    ],
    "files": [
        "src/shims-vue.d.ts"
    ],
    "exclude": [
        "node_modules",
        "node_modules/**"
    ]
}
